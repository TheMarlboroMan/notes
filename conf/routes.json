[
	{
		"path":"api/login",
		"methods":{
			"POST": {
				"controller":"notes::api::controller::login",
				"method":"post",
				"auth": [],
				"out":"json",
				"arguments":[
					{"name":"username", "source":"json", "type":"string"},
					{"name":"pass", "source":"json", "type":"string"}
				]
			}
		}
	},
	{
		"path": "api/notes",
		"methods":{
			"GET": {
				"controller": "notes::api::controller::notes",
				"method": "get",
				"auth":["logged_in"],
				"out":"json",
				"arguments":[]
			},
			"POST": {
				"controller": "notes::api::controller::notes",
				"method": "post",
				"auth":["logged_in"],
				"out":"json",
				"arguments":[
					{"name":"contents", "source":"json", "type":"string"}
				]
			}
		}
	},
	{
		"path":"api/notes/[id:int]",
		"methods":{
			"GET": {
				"controller": "notes::api::controller::notes",
				"method": "info",
				"auth":["logged_in", "user_owns_note"],
				"out":"json",
				"arguments":[
					{
						"name":"id", "source":"uri", "type":"int"
					}
				]
			},
			"PATCH": {
				"controller": "notes::api::controller::notes",
				"method": "patch",
				"auth":["logged_in", "user_owns_note"],
				"out":"json",
				"arguments":[
					{"name":"id", "source":"uri", "type":"int"},
					{"name":"contents", "source":"json", "type":"string"}
				]
			},
			"DELETE": {
				"controller": "notes::api::controller::notes",
				"method": "delete",
				"auth":["logged_in", "user_owns_note"],
				"out":"json",
				"arguments":[
					{"name":"id", "source":"uri", "type":"int"}
				]
			}
		}
	}
]
